               android:textSize="16sp"
            android:fontFamily="@font/interregular"
                android:gravity="fill_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv11"/>

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/iv_wfd_assemble_7"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv12"/>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qum solishdan oldingi holati"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/colortext1"
                   android:textSize="16sp"
            android:fontFamily="@font/interregular"
                    android:textStyle="bold"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/iv5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qum solingandan keyingi holati"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/colortext1"
                   android:textSize="16sp"
            android:fontFamily="@font/interregular"
                    android:textStyle="bold"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/iv5"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Suv solib tekshirish jarayoni "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/colortext1"
                   android:textSize="16sp"
            android:fontFamily="@font/interregular"
                    android:textStyle="bold"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/iv5"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_wfd_assemble_13"
                android:textColor="@color/colortext2"
                android:justificationMode="inter_word"
               android:textSize="16sp"
            android:fontFamily="@font/interregular"
                android:gravity="fill_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll2"/>


            <TextView
                android:id="@+id/tv14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Eslatma! Wetting front detektor asboblarini dalaga o‘rnatishdan avval to‘g‘ri ishlashini sinchiklab tekshirib chiqish shart!"
                android:textColor="@color/colortext2"
                android:justificationMode="inter_word"
               android:textSize="16sp"
            android:fontFamily="@font/interregular"
                android:textStyle="italic"
                android:gravity="fill_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv13"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv14"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
