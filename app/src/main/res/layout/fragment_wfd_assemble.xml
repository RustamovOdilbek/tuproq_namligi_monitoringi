                android:layout_height="wrap_content"
                android:textColor="@color/colortext1"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/interregular"
                android:text="@string/str_wfd_assemble"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_wfd_assemble_1"
                android:textColor="@color/colortext2"
                android:justificationMode="inter_word"
               android:textSize="16sp"
            android:fontFamily="@font/interregular"
                android:gravity="fill_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWFDAssemble"/>

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/iv_wfd_assemble_1"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv1"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_wfd_assemble_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colortext1"
               android:textSize="16sp"
            android:fontFamily="@font/interregular"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/iv1"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_wfd_assemble_3"
                android:textColor="@color/colortext2"
                android:justificationMode="inter_word"
               android:textSize="16sp"
            android:fontFamily="@font/interregular"
                android:gravity="fill_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv2"/>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/iv_wfd_assemble_2"
                android:layout_marginTop="10dp"
